<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.MusicPlayer" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/soft_blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <style name="Theme.MusicPlayer" parent="Base.Theme.MusicPlayer" />

    <style name="DefaultTextInter">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/grayDark1</item>
    </style>
    <!--see https://stackoverflow.com/a/46701441-->
    <style name="TextInter400" parent="DefaultTextInter">
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="TextInter500" parent="DefaultTextInter">
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="TextInter600" parent="DefaultTextInter">
        <item name="android:fontFamily">@font/inter_semi_bold</item>
    </style>

    <style name="TextInter700" parent="DefaultTextInter">
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>

    <style name="MainButton" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">@dimen/_38sdp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:foreground">?selectableItemBackgroundBorderless</item>
        <item name="cornerRadius">6dp</item>
    </style>

    <style name="MainEditText">
        <item name="android:minHeight">@dimen/_35sdp</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/grayDark1</item>
        <item name="android:textColorHint">@color/grayDark4</item>
    </style>

    <style name="OutlineSearchEditTextPrimary" parent="MainEditText">
        <item name="theme">@style/TextInter400</item>
        <item name="android:drawablePadding">@dimen/_4sdp</item>
        <item name="android:paddingStart">@dimen/_12sdp</item>
        <item name="android:paddingEnd">@dimen/_12sdp</item>
        <item name="android:minHeight">@dimen/_30sdp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:lines">1</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:background">@drawable/selector_edittext_20dp_outline</item>
    </style>

    <style name="SearchEditText" parent="MainEditText">
        <item name="android:drawablePadding">@dimen/_4sdp</item>
        <item name="android:paddingStart">@dimen/_12sdp</item>
        <item name="android:paddingEnd">@dimen/_12sdp</item>
        <item name="android:minHeight">@dimen/_30sdp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:lines">1</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:background">@drawable/selector_edittext_20dp_outline</item>
    </style>

    <style name="BottomSheetDialogTopRounded" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="BottomSheetDialogTopRounded4dp" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle4dp</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_round_top_16dp_white</item>
    </style>

    <style name="AppModalStyle4dp" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_round_top_4dp_white</item>
    </style>

    <style name="BackgroundWhiteButton" parent="MainButton">
        <item name="android:backgroundTint">@color/white</item>
    </style>

</resources>